<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.job.admin.dao.XxlJobAuditLogDao">

<resultMap id="XxlJobAuditLog" type="com.xxl.job.admin.core.model.XxlJobAuditLog">
<result column="id" property="id" />
<result column="job_id" property="jobId" />
<result column="username" property="username" />
<result column="action" property="action" />
<result column="ip" property="ip" />
<result column="detail" property="detail" />
<result column="create_time" property="createTime" />
</resultMap>

<insert id="save" parameterType="com.xxl.job.admin.core.model.XxlJobAuditLog" useGeneratedKeys="true" keyProperty="id">
INSERT INTO xxl_job_audit_log (job_id, username, action, ip, detail, create_time)
VALUES (#{jobId}, #{username}, #{action}, #{ip}, #{detail}, #{createTime})
</insert>

<select id="findByJobId" parameterType="int" resultMap="XxlJobAuditLog">
SELECT id, job_id, username, action, ip, detail, create_time
FROM xxl_job_audit_log
WHERE job_id = #{jobId}
ORDER BY id DESC
</select>

</mapper>
